
{
system_ruleset.

/**
 * H = '+'(A,B):
 *
 * H is bound to A+B
 */
system_add@@ H='+'(A, B) :- int(A),int(B),A+B=C | H=C.

/**
 * H = '-'(A,B):
 *
 * H is bound to A-B
 */
system_sub@@ H='-'(A, B) :- int(A),int(B),A-B=C | H=C.

/**
 * H = '*'(A,B):
 *
 * H is bound to A*B
 */
system_mul@@ H='*'(A, B) :- int(A),int(B),A*B=C | H=C.

/**
 * H = '/'(A,B):
 *
 * H is bound to A/B
 */
system_div@@ H='/'(A, B) :- int(A),int(B),A/B=C | H=C.

/**
 * H = mod(A,B):
 *
 * H is bound to A mod B
 */
system_mod@@ H=mod(A, B) :- int(A),int(B),A mod B = C | H=C.

/*
 * H='>'(A,B):
 *
 * H is bound to true when A>B, false otherwise
 */
system_gt@@ H='>'(A, B) :- int(A),int(B),A>B | H=true.
system_gt@@ H='>'(A, B) :- int(A),int(B),A=<B | H=false.

/*
 * H='<'(A,B):
 *
 * H is bound to true when A<B, false otherwise
 */
system_lt@@ H='<'(A, B) :- int(A),int(B),A>=B | H=false.
system_lt@@ H='<'(A, B) :- int(A),int(B),A<B | H=true.

/*
 * H='>='(A,B):
 *
 * H is bound to true when A>=B, false otherwise
 */
system_ge@@ H='>='(A, B) :- int(A),int(B),A>=B | H=true.
system_ge@@ H='>='(A, B) :- int(A),int(B),A<B | H=false.

/*
 * H='=<'(A,B):
 *
 * H is bound to true when A=<B, false otherwise
 */
system_le@@ H='=<'(A, B) :- int(A),int(B),A>B | H=false.
system_le@@ H='=<'(A, B) :- int(A),int(B),A=<B | H=true.

/*
 * H='=='(A,B):
 *
 * H is bound to true when A==B, false otherwise
 */
system_eq@@ H='=='(A, B) :- int(A),int(B),A=B | H=true.
system_eq@@ H='=='(A, B) :- int(A),int(B),A-B>0 | H=false.
system_eq@@ H='=='(A, B) :- int(A),int(B),A-B<0 | H=false.

/* 
 * H='!='(A,B):
 *
 * H is bound to true when A!=B, false otherwise
 */
system_ne@@ H='!='(A, B) :- int(A),int(B),A=B | H=false.
system_ne@@ H='!='(A, B) :- int(A),int(B),A-B>0 | H=true.
system_ne@@ H='!='(A, B) :- int(A),int(B),A-B<0 | H=true.

/*
 * H='<<'(A,B):
 *
 * H is bound to A shift left by N bits
 */
system_sl@@ H = '<<'(A, N) :- int(A),int(N),N>0 | H='<<'(A*2,N-1).
system_sl@@ H = '<<'(A, 0) :- H=A.

/*
 * H='>>'(A,B):
 *
 * H is bound to A shift right by N bits
 */
system_sr@@ H = '>>'(A, N) :- int(A),int(N),N>0 | H='>>'(A/2,N-1).
system_sr@@ H = '>>'(A, 0) :- H=A.



